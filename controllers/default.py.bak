def get_user_name_from_email(email):
    """Returns a string corresponding to the user first and last names,
    given the user email."""
    u = db(db.auth_user.email == email).select().first()
    if u is None:
        return 'None'
    else:
        return ' '.join([u.first_name, u.last_name])


def index():
    """
    This is your main controller.  Here you do almost nothing; you just cause index.html to be served.
    
    search function is here
    """

    post_content_default = request.vars.post_content

    form = SQLFORM.factory(
                  Field("post_content",default=post_content_default),
                  formstyle='divs',
                  submit_button="Search",
                  )
    # testing if the form was accepted
    query = True

    if form.process().accepted:
    # gathering form submitted values
        post_content = form.vars.post_content

        if post_content:
            # A simple text search with %like%
            query &= db.post.post_content.like("%%%s%%" % post_content)
    results = db(query).select(orderby=~db.post.updated_on)
    return dict(form=form, results=results)


